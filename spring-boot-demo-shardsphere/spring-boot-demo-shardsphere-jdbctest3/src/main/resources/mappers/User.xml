<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.zxl.springbootdemo.shardsphere.jdbctest3.repository.UserRepository">
    
    <!--<resultMap id="baseResultMap" type="com.forezp.sharedingjdbcmasterslavetables.entity.User">-->
        <!--<result column="id" property="id" jdbcType="INTEGER" />-->
        <!--<result column="username" property="username" jdbcType="VARCHAR" />-->
        <!--<result column="password" property="password" jdbcType="VARCHAR" />-->
    <!--</resultMap>-->
    
    <insert id="addUser">
        INSERT INTO user (
          id, username, password
        )
        VALUES (
        #{id,jdbcType=INTEGER},
        #{username,jdbcType=VARCHAR},
        #{password,jdbcType=VARCHAR}
        )
    </insert>
   
    <select id="list" resultType="org.zxl.springbootdemo.shardsphere.jdbctest3.entity.User">
        SELECT u.* FROM user u
    </select>

    <update id="updateUserById">
        update user set username = #{username} where id = #{id}
    </update>

    <update id="updateUserByUsername">
        update user set password = #{password} where username = #{username}
    </update>


    <select id="selectUsersByLogId" resultType="org.zxl.springbootdemo.shardsphere.jdbctest3.entity.User">
        SELECT u.* FROM user u ,t_user t
        where u.id = t.user_id
        and t.user_age = {logId}
    </select>
</mapper>
